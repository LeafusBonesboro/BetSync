{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "backend/src",
  "monorepo": true,
  "root": "backend",
  "projects": {
    "backend": {
      "type": "application",
      "root": "backend",
      "entryFile": "main",
      "sourceRoot": "backend/src",
      "compilerOptions": {
        "tsConfigPath": "backend/tsconfig.build.json",
        "deleteOutDir": true,
        "webpack": false,
        "outputPath": "backend/dist"
      }
    }
  }
}
