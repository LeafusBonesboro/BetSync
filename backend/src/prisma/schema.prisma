generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bet {
  id        Int      @id @default(autoincrement())
  event     String
  market    String
  stake     Float
  odds      Int
  status    String   @default("Pending")
  createdAt DateTime @default(now())
  imageUrl  String?
  link      String?
  eventId   String?
  rawText   String?   // ðŸ†• add this
}


model ExpertAnalysis {
  id           Int      @id @default(autoincrement())
  expertName   String
  title        String?
  summary      String?
  transcript   String    // markdown text
  parsedData   Json      // predictions, insights, structured info
  filePath     String?
  createdAt    DateTime  @default(now())
}

model Player {
  id        Int      @id @default(autoincrement())
  espnId    String   @unique
  fullName  String
  position  String?
  team      String?
  stats     Stat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Stat {
  id        Int      @id @default(autoincrement())
  player    Player   @relation(fields: [playerId], references: [id])
  playerId  Int
  season    Int
  category  String
  name      String
  label     String?
  value     Float
  createdAt DateTime @default(now())

  @@unique([playerId, season, name]) // avoid duplicate stats
}
