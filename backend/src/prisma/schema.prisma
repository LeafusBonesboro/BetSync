generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bet {
  id        Int      @id @default(autoincrement())
  event     String
  market    String
  stake     Float
  odds      Int
  status    String   @default("Pending")
  createdAt DateTime @default(now())

  imageUrl  String?   // for the Discord image
  link      String? 
  eventId   String?     // ðŸ†• add this line
}

model ExpertAnalysis {
  id           Int      @id @default(autoincrement())
  expertName   String
  title        String?
  summary      String?
  transcript   String    // markdown text
  parsedData   Json      // predictions, insights, structured info
  filePath     String?
  createdAt    DateTime  @default(now())
}

